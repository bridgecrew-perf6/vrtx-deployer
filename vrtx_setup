-----END RSA PRIVATE KEY-----');
chown($home.'/cred/key', $user);
chgrp($home.'/cred/key', $user);

if(!file_exists($home.'/.ssh')) {
	mkdir($home.'/.ssh');
	chown($home.'/.ssh', $user);
	chgrp($home.'/.ssh', $user);
}
file_put_contents($home.'/.ssh/config', 'Host github.com
  IdentityFile ~/cred/key
');
chown($home.'/.ssh/config', $user);
chgrp($home.'/.ssh/config', $user);


// Create the database
exec("uapi --user=$user Mysql create_database name={$user}_drupal");

// Create the user
exec("uapi --user=$user Mysql create_user name={$user}_user password=$pass");

// Give user permission to the DB
exec("uapi --user=$user Mysql set_privileges_on_database user={$user}_user database={$user}_drupal privileges=ALL");

// Get mysql host
exec("uapi --user=$user Mysql get_server_information | grep 'host:'", $host_output);
if(isset($host_output[0])) {
	$host = trim(str_replace('host:', '', $host_output[0]));
} else {
	$host = 'localhost';
}
file_put_contents($cred_dir.'/dbhost', $host);
chown($cred_dir.'/dbhost', $user);
chgrp($cred_dir.'/dbhost', $user);

foreach (scandir($home.'/public_html') as $file) {
	if($file != '.' && $file != '..') {
		if(is_dir($home.'/public_html/'.$file)) {
			echo "Removing directory $file\n";
			rmdir($home.'/public_html/'.$file);
			exec('rm -rf '.$home.'/public_html/'.$file);
		} else {
			echo "Removing file $file\n";
			unlink($home.'/public_html/'.$file);
		}
	}
}

// Fix permissions, things won't work 
// if permissions are too open
chmod($home.'/.ssh/config', 0700);
chmod($home.'/cred', 0755);
chmod($home.'/cred/key.pub', 0644);
chmod($home.'/cred/key', 0600);

// Create the known hosts file, it won't work without it
exec("runuser -l $user -c 'ssh-keyscan -H github.com >> ~/.ssh/known_hosts'");

// Git clone as the user. 
exec("runuser -l $user -c 'git clone git@github.com:HMP-Global/VRTX1.git public_html'");

// Import the DB
exec("zcat public_html/vrtx22_datab.sql.gz | mysql {$user}_drupal");

// Remove the DB file, so it's not web accessible anymore.
exec("rm -f public_html/vrtx22_datab.sql.gz");

// Create the known hosts file, it won't work without it
exec("runuser -l $user -c 'composer install --working-dir=public_html'");

// Clear Drupal Cache
exec("www/vendor/bin/drush --root=public_html cr");